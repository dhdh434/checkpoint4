@model gradeModel;


<!--grade calculator with form and inputs-->
<h2>Grade Calculator</h2>
<h5>Please input the percentages for the following sections:</h5>
<h6>enter as a number between 0-100</h6>
<form method="post">
    <label>Assignments:</label>
    <input id="as" asp-for="assignments"/><br />
    <label>Group Projects:</label>
    <input id="gp" asp-for="groupAssignments"/><br />
    <label>Quizes:</label>
    <input id="q" asp-for="quiz"/><br />
    <label>Midterm Exam:</label>
    <input id="me" asp-for="midterm"/><br />
    <label>Final Exam:</label>
    <input id="fe" asp-for="final"/><br />
    <label>INTEX:</label>
    <input id="in" asp-for="intex"/><br /><br />
    <input id="btnsend" type="submit" value="submit this thang" /><br /><br />
    <label>Letter Grade:</label>
    <p><span id="output"></span></p><br /><br />
</form>

